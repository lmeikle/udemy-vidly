@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Count == 0)
{
    <p>No movies yet.</p>
}
else
{
    <table class="table" table-bordered table-hover”>
        <thead>
        <tr>
            <th>Movies</th>
        </tr>
        </thead>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(@movie.Name, "Details", new {id = @movie.Id})
                </td>
            </tr>
        }
    </table>
}

